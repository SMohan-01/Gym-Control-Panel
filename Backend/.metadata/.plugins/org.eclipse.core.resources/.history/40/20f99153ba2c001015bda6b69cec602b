package in.mohan.gym_management_system.entity;

import java.math.BigDecimal;

import jakarta.persistence.*;

@Entity
@Table(name = "packages")
public class PackageEntity {
	
	@Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable = false)
    private String packageName;
    
    @Column(nullable = false)
    private BigDecimal price; 

    @Column(nullable = false)
    private Integer durationInMonths;  

    @Column(nullable = false)
    private Boolean active = true;

	public PackageEntity() {
		super();
	}

	public PackageEntity(String packageName, BigDecimal price, Integer durationInMonths, Boolean active) {
		super();
		this.packageName = packageName;
		this.price = price;
		this.durationInMonths = durationInMonths;
		this.active = active;
	}

	public PackageEntity(Long id, String packageName, BigDecimal price, Integer durationInMonths, Boolean active) {
		super();
		this.id = id;
		this.packageName = packageName;
		this.price = price;
		this.durationInMonths = durationInMonths;
		this.active = active;
	}

	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public String getPackageName() {
		return packageName;
	}

	public void setPackageName(String packageName) {
		this.packageName = packageName;
	}

	public BigDecimal getPrice() {
		return price;
	}

	public void setPrice(BigDecimal price) {
		this.price = price;
	}

	public Integer getDurationInMonths() {
		return durationInMonths;
	}

	public void setDurationInMonths(Integer durationInMonths) {
		this.durationInMonths = durationInMonths;
	}

	public Boolean getActive() {
		return active;
	}

	public void setActive(Boolean active) {
		this.active = active;
	}

	@Override
	public String toString() {
		return "PackageEntity [id=" + id + ", packageName=" + packageName + ", price=" + price + ", durationInMonths="
				+ durationInMonths + ", active=" + active + "]";
	} 

}
